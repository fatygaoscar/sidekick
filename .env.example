# Sidekick Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/sidekick.db

# Transcription backend: "local" (faster-whisper) or "openai"
TRANSCRIPTION_BACKEND=local

# faster-whisper settings (when TRANSCRIPTION_BACKEND=local)
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=auto
WHISPER_COMPUTE_TYPE=auto

# OpenAI API (when using OpenAI transcription or summarization)
OPENAI_API_KEY=

# Anthropic API (when using Claude summarization)
ANTHROPIC_API_KEY=

# Summarization backend: "ollama", "openai", or "anthropic"
SUMMARIZATION_BACKEND=ollama

# Ollama settings (when SUMMARIZATION_BACKEND=ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI summarization model
OPENAI_SUMMARIZATION_MODEL=gpt-4o-mini

# Anthropic summarization model
ANTHROPIC_SUMMARIZATION_MODEL=claude-3-haiku-20240307

# Audio settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
VAD_AGGRESSIVENESS=2

# Important marker duration (seconds to flag after button press)
IMPORTANT_MARKER_DURATION=60
